<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.badpals.pokeapi.controller.AppController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="pokemonName"/>
    <Label fx:id="errorMessage" text="Error al cargar los datos del pokemon" visible="false"/>
    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <Button text="Buscar" onAction="#loadPokemon"/>
        <Button text="Limpiar" onAction="#cleanFields"/>
    </HBox>
    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <Label text="Pokemon id:"/>
        <Label fx:id="pokemonId"/>
    </HBox>
    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <Label text="Nombre:"/>
        <ComboBox fx:id="languages" onAction="#loadForeignName"/>
        <Label fx:id="foreignName"/>
    </HBox>
    <Label text="Location:"/>
    <HBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml">
        <Button fx:id="btnAnterior" disable="true" text="Anterior" onAction="#getPreviousArea"/>
        <Label alignment="CENTER" minWidth="200.0" fx:id="pokemonLocation"/>
        <Button fx:id="btnSiguiente" disable="true" text="Siguiente" onAction="#getNextArea"/>
    </HBox>

    <Label text="Exportar"/>
    <HBox fx:id="exportArea" alignment="CENTER" spacing="5.0" managed="false" visible="false" xmlns:fx="http://javafx.com/fxml">
        <Label text="Ruta para exportar"/>
        <TextField fx:id="pathName"/>
        <ComboBox fx:id="cmbFormat"/>
        <Button fx:id="btnExport" text="Exportar" disable="true" onAction="#export"/>
    </HBox>
    <Label fx:id="exportMessage" text=""/>
    <VBox fx:id="logInArea" alignment="CENTER" spacing="5.0" managed="true" xmlns:fx="http://javafx.com/fxml">
        <Label text="Es necesario estar registrado para exportar la informaci칩n"/>
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="btnLogIn" text="Log In" onAction="#showlogIn"/>
            <Button fx:id="btnSignUp" text="Registrarse"/>
        </HBox>
        <VBox fx:id="loginFields" alignment="CENTER" spacing="5.0" managed="false" visible="false">
            <HBox alignment="CENTER">
                <Label text="Usuario"/>
                <TextField fx:id="userName"/>
            </HBox>
            <HBox alignment="CENTER">
                <Label text="Contrase침a"/>
                <PasswordField fx:id="password"/>
            </HBox>
            <Label fx:id="logInStatus" managed="false" visible="false" text="Usuario o contrase침a no v치lidos"/>
            <Button fx:id="btnCheckLogIn" text="Entrar" onAction="#checkLogIn" />
        </VBox>
    </VBox>


</VBox>
