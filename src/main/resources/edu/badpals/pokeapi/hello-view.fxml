<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.badpals.pokeapi.controller.AppController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="pokemonName"/>
    <Button text="Buscar" onAction="#cargarPokemon"/>
    <Label text="Pokemon id:"/>
    <Label fx:id="pokemonId"/>
    <Label text="Nombres:"/>
    <Label text="Inglés:"/>
    <Label fx:id="englishName"/>
    <Label text="Japonés:"/>
    <Label fx:id="japaneseName"/>
    <Label text="Coreano:"/>
    <Label fx:id="koreanName"/>
    <Label fx:id="pokemonLocation"/>
    <Button text="Buscar área" onAction="#buscarArea"/>




</VBox>
